@{
    ViewBag.Title = "Test";
    int count = 0;
    int questionCount = 0;
}

@foreach (var question in Model)
{
    <p>@question.QuestionText</p>
    questionCount++;
    foreach (var answer in question.Answers)
    {
        if (question.RightAnswerId == answer.Key)
        {
            @InputExtensions.RadioButton(Html, question.QuestionText, "true", new { id = count++ });
        }
        else
        {
            @InputExtensions.RadioButton(Html, question.QuestionText, "false", new { id = count++ });
        }
        <a>@answer.Value</a>
        <br />
    }
}

<button id="but" OnClick="ShowResult()">finish</button>
<p id="result" />

<script language="javascript">
    var right = 0
    var wrong = 0;

    function ShowResult() {

        for (var i = 0; i < @count; i++) {
            if (document.getElementById(i).checked && document.getElementById(i).getAttribute('value') == 'true') {
                right++
            }
            else if (!document.getElementById(i).checked && document.getElementById(i).getAttribute('value') == 'true') {
                wrong++
            }
        }

        result.textContent = 'right: ' + right + '  wrong: ' + wrong;
    }
</script>